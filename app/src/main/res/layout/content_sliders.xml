<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundclassy"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.classy.hoth3.classy.sliders"
    tools:showIn="@layout/activity_sliders">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/leckerli_one"
        android:inputType="textPersonName"
        android:text="classy."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp" />

    <SeekBar
        android:id="@+id/seekBar_help"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginBottom="154dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/background_light"
        android:max="4"
        android:progress="0"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="@android:color/background_light"
        android:secondaryProgressTint="@android:color/background_light"
        android:thumbTint="@android:color/holo_blue_bright"
        android:tickMarkTint="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_clarity" />

    <SeekBar
        android:id="@+id/seekBar_clarity"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/background_light"
        android:max="4"
        android:progress="0"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="@android:color/background_light"
        android:secondaryProgressTint="@android:color/background_light"
        android:thumbTint="@android:color/holo_blue_bright"
        android:tickMarkTint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_work" />

    <SeekBar
        android:id="@+id/seekBar_work"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/background_light"
        android:max="4"
        android:progress="0"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="@android:color/background_light"
        android:secondaryProgressTint="@android:color/background_light"
        android:thumbTint="@android:color/holo_blue_bright"
        android:tickMarkTint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_clarity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_easy" />

    <SeekBar
        android:id="@+id/seekBar_easy"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/background_light"
        android:max="4"
        android:progress="0"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="@android:color/background_light"
        android:secondaryProgressTint="@android:color/background_light"
        android:thumbTint="@android:color/holo_blue_bright"
        android:tickMarkTint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_rating" />

    <SeekBar
        android:id="@+id/seekBar_rating"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="82dp"
        android:backgroundTint="@android:color/background_light"
        android:max="4"
        android:progress="0"
        android:progressBackgroundTint="@android:color/background_light"
        android:progressTint="@android:color/background_light"
        android:secondaryProgressTint="@android:color/background_light"
        android:thumbTint="@android:color/holo_blue_bright"
        android:tickMarkTint="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_easy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_subject" />

    <TextView
        android:id="@+id/txt_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:text="Overall Rating"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_rating"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:text="Easiness"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_easy"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:text="Workload (Heavy to Light)"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_work"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_clarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:text="Clarity"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_clarity"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:text="Helpfulness"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_help"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner_subject"
        android:layout_width="291dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="96dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_subject"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="149dp"
        android:text="Choose a Subject:"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/spinner_subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="162dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="31dp"
        android:background="@android:color/holo_blue_light"
        android:text="Go!"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_help" />

    <TextView
        android:id="@+id/txt_minpref"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="107dp"
        android:layout_marginStart="107dp"
        android:text="Set Minimum Preferences (1-5):"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/txt_rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
