<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:gravity="center_horizontal"
    android:padding="25dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:text="Overall"
                android:textStyle="bold"
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/overall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:isIndicator="true"
                android:theme="@style/RatingBar"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <RatingBar
                android:id="@+id/easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/overall"
                android:layout_alignStart="@+id/overall"
                android:layout_below="@+id/overall"
                android:isIndicator="true"
                android:theme="@style/RatingBar"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <RatingBar
                android:id="@+id/work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/easy"
                android:layout_alignStart="@+id/easy"
                android:layout_below="@+id/easy"
                android:isIndicator="true"
                android:theme="@style/RatingBar"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <RatingBar
                android:id="@+id/clarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/work"
                android:layout_alignStart="@+id/work"
                android:layout_below="@+id/work"
                android:isIndicator="true"
                android:theme="@style/RatingBar"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <RatingBar
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignLeft="@+id/clarity"
                android:layout_alignStart="@+id/clarity"
                android:layout_below="@+id/clarity"
                android:isIndicator="true"
                android:theme="@style/RatingBar"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/easy"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:text="Easiness"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:fontFamily="sans-serif"
                android:text="Work"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/help"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:text="Clarity"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/clarity"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="13dp"
                android:text="Helpfulness"
                android:textStyle="bold"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@id/offer_image"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_white_48dp" />

            <ImageView
                android:id="@+id/right_image"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/offer_image"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_forward_white_48dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sample_text"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="center_horizontal"
            android:text="Sample Text"
            android:textStyle="bold"
            android:textSize="35dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>